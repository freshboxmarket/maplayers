{
  "selection": {
    "type": "csv",
    "url": "https://docs.google.com/spreadsheets/d/e/2PACX-1vSlFU0sHIDee6KXzmFf5MfzJeOg0Jm2Gx0U4DW82Pb-Pwkb6i7Q5nR30_TitJ5bt6dLQXezTuUBU0dP/pub?output=csv",
    "schema": {
      "day": "day",
      "keys": "zone keys",
      "delimiter": ","
    },
    "mergeDays": true
  },
  "layers": [
    {
      "day": "Wednesday",
      "name": "_Wednesday_group",
      "url": "./data/_Wednesday_group.geojson"
    },
    {
      "day": "Thursday",
      "name": "_Thursday_group",
      "url": "./data/_Thursday_group.geojson"
    },
    {
      "day": "Friday",
      "name": "_Friday_group",
      "url": "./data/_Friday_group.geojson"
    },
    {
      "day": "Saturday",
      "name": "_Saturday_group",
      "url": "./data/_Saturday_group.geojson"
    }
  ],
  "fields": {
    "key": "zone key",      // your GeoJSON uses "zone key" (space)
    "day": "Zone",          // your GeoJSON uses "Zone"
    "muni": "Municipality"  // optional, for popups
  },
  "style": {
    "unselectedMode": "dim",   // "dim" or "hide"
    "selected": { "opacity": 0.8, "weight": 2 },
    "dimmed":   { "opacity": 0.15, "weight": 1 },
    "perDay": {
      "Wednesday": { "color": "#2E7D32" },
      "Thursday":  { "color": "#D32F2F" },
      "Friday":    { "color": "#1976D2" },
      "Saturday":  { "color": "#FBC02D" }
    }
  },
  "behavior": {
    "autoZoom": true,
    "refreshSeconds": 0  // 0 = no auto-refresh; set e.g. 60 to re-pull selection CSV every minute
  }
}
